{
  "manifest_version": 2,
  "name": "Fuck-Ytshorts",
  "version": "0.2",
  "description": "Removes the youtube slop section also known as youtube shorts.",

  "icons": {
    "48": "icons/image.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "fuck-ytshorts@local",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": [],
        "default": []
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["ytslop.js"],
      "run_at": "document_idle"
    }
  ]
}
